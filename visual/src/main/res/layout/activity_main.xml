<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <AbsoluteLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/llTopColor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/tvTopText"></TextView>

        <Button
            android:id="@+id/btnTop"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_x="0dp"
            android:layout_y="36dp"
            android:text="@string/btnTopText"></Button>

        <Button
            android:id="@+id/btnTop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_x="181dp"
            android:layout_y="140dp"
            android:text="Button2"></Button>

        <Button
            android:id="@+id/btnTop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_x="95dp"
            android:layout_y="93dp"
            android:text="Button3"></Button>

    </AbsoluteLayout>

    <AbsoluteLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_x="181dp"
            android:layout_y="160dp"
            android:text="TextView"></TextView>

        <Button
            android:id="@+id/btnBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_x="175dp"
            android:layout_y="199dp"
            android:text="Button"></Button>
    </AbsoluteLayout>
</LinearLayout>